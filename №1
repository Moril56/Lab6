#include <stdio.h>

int main() {
int play = 1;

    while (play) {
      // Вхідні дані
     int rows, columns;
        
    printf("Введіть кількість рядків: ");
    if (scanf("%d", &rows) != 1 || rows <= 0) {
        printf("Помилка: некоректне введення.\n");
    }
    printf("Введіть кількість стовпців: ");
    if (scanf("%d", &columns) != 1 || columns <= 0){
        printf("Помилка: некоректне введення.\n");
    }

    // Заповнення матриці значеннями з клавіатури
    int A[rows][columns];
    printf("Введіть елементи матриці:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if (scanf("%d", &A[i][j]) != 1 ){
                printf("Помилка: некоректне введення.\n");
            }
        }
    }

    // Знаходження двох найбільших елементів
    int max_1 = A[0][0];
    int max_2 = A[0][0];
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if (A[i][j] > max_1) {
                max_2 = max_1;
                max_1 = A[i][j];
            } else if (A[i][j] > max_2 && A[i][j] < max_1) {
                max_2 = A[i][j];
            }
        }
    }

    // Заміна цих елементів на нулі
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            if (A[i][j] == max_1 || A[i][j] == max_2) {
                A[i][j] = 0;
            }
        }
    }

    // Виведення результату
    printf("Результат:\n");
    for (int i = 0; i < rows; i++) {
        for (int j = 0; j < columns; j++) {
            printf("%d ", A[i][j]);
        }
        printf("\n");
    }
        // Спрашиваем, хочет ли пользователь повторить операцию
        printf("Хотите выполнить операцию еще раз? (1 для Так, 0 для Ні): ");
        scanf("%d", &play);
    }
    return 0;
}
